<!doctype html>
<html>
<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>

    <% if (user.details=='{}') { %>
        <script src="/js"></script>
    <% } %>

</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span>Dashboard</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%= user.username %></h3>

                <p>
                    <strong>College:</strong> <% if(user.details!='{}'){%><%=user.details.college%><%}else{%>'Login again to fill.'<%} %><br>
                    <strong>Degree:</strong> <% if(user.details!='{}'){%><%=user.details.degree%><%}else{%>Login again to fill.<%} %><br>
                </p>

            </div>
        </div>

    </div>


    <div id="modalView" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Details Form</h4>
                </div>
                <div class="modal-body">
                    <form action="/details" method="post">
                        <div class="form-group">
                            <label>College</label>
                            <input type="text" class="form-control" name="college">
                        </div>
                        <div class="form-group">
                            <label>Degree</label>
                            <input type="text" class="form-control" name="degree">
                        </div>

                        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>
</body>
</html>